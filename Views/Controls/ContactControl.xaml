<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MyContacts.Views.Controls.ContactControl">


    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions=".60*"
          RowSpacing="10"
          Padding="10"
          Margin="10">

        <Label Text="Name"
               FontSize="18"
               Grid.Row="0"/>
        <Entry Grid.Row="1"
               x:Name="Entry_Name"/>

        <Label Text="Email Address"
               FontSize="18"
               Grid.Row="2"/>
        <Entry Grid.Row="3"
               x:Name="Entry_Email"/>

        <Label Text="Phone Number"
               FontSize="18"
               Grid.Row="4"/>
        <Entry Grid.Row="5"
               x:Name="Entry_PhoneNumber"/>

        <Button Text="Save Contact"
                Grid.Row="6"
                x:Name="BtnContactSave"
                Clicked="BtnContactSave_Clicked"/>

    </Grid>
    
    
</ContentView>
